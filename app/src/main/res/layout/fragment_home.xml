<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    tools:context=".fragment.HomeFragment">

    <ImageButton
        android:id="@+id/hamburgerImageButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/navigation_drawer"
        android:src="@drawable/ic_hamburger" />

    <TextView
        android:id="@+id/homeStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sacramento"
        android:text="Begin"
        android:textColor="#673AB7"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/startTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="254dp"
        android:fontFamily="@font/poppins_light"
        android:textStyle="bold"
        android:text="Let's Journey Safe !"
        android:textColor="#673AB7"
        android:textSize="21sp" />

</RelativeLayout>